<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.Proyecto" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Proyecto" parent="Base.Theme.Proyecto" />

    <style name="TextTitle">
        <item name="android:textSize">32sp</item>
        <item name="android:fontFamily">@font/blackopsregular</item>
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Background_app">
        <item name="android:background">@drawable/background_shape</item>
    </style>

    <style name="Cardview_Border">
        <item name="cardBackgroundColor">#80040404</item>
        <item name="cardCornerRadius">25dp</item>
    </style>

    <style name="NumberPick">
        <item name="colorAccent">@color/yellow</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>